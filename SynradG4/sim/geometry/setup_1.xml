<xml>
	<!-- world sizes -->
	<world>
		<sec desc="size X" name="x" unit="m">2.0</sec>
		<sec desc="size Y" name="y" unit="m">2.0</sec>
		<sec desc="size Z" name="z" unit="m">200.0</sec>
	</world>

	<!-- OBJ file -->
	<beampipe>
	</beampipe>

	<!-- beam pipe extension -->
	<extension>
	</extension>

	<!-- ip beam pipe -->
	<ipbeampipe>
	</ipbeampipe>

	<!-- synrad model -->
	<srmodel>
		<sec desc="1 - G4SynchrotronRadiation; 2 - G4SynchrotronRadiationInMat" name="model">1</sec>
		<sec desc="SR photon reflection process: 0 - Geant4 (Xray,NÃ©vot-Croce); 1 - Synrad+ (Gamma,Debye-Waller); 2 - Synrad+ (Gamma,perturb norm - old model); 3 - Synrad+ (Gamma,Debye-Waller,perturb refl - new model)" name="type">0</sec>
		<sec desc="Print SR photon reflection data: 1 - true; 0 - false" name="print">1</sec>
		<sec desc="Surface roughness" name="roughness" unit="m">0</sec>
		<sec desc="Surface autocorrelation length" name="corrlength" unit="m">10000e-9</sec>
		<sec desc="Surface roughness ratio" name="sigma" unit="">5e-3</sec>
	</srmodel>

	<!-- store photon trajectories -->
	<storetrj>
		<sec desc="Store trajectories: 1 - true; 0 - false" name="store">0</sec>
		<sec desc="Zmin for the region of interest (where the photon stopped)" name="Zmin" unit="cm">4000</sec>
		<sec desc="Zmax for the region of interest (where the photon stopped)" name="Zmax" unit="cm">4500</sec>
		<sec desc="Emin for the tracked photon" name="Emin" unit="GeV">0</sec>
	</storetrj>

	<!-- tracked gamma cuts -->
	<gammacut>
		<sec desc="gamma energy cut" name="ecut" unit="eV">30</sec>
		<sec desc="gamma straight track kill: 1 - true; 0 - false" name="trackkill">0</sec>
		<sec desc="gamma straight track Dmin" name="Dmin" unit="mm">0</sec>
		<sec desc="gamma straight track Zend" name="Zend" unit="cm">5000</sec>
	</gammacut>

	<!-- scale the number of SR gammas per electron -->
	<meanfreepath>
		<sec desc="gamma production scale factor to modify MeanFreePath" name="MeanFreePathFactor" unit="">1</sec>
	</meanfreepath>

	<!-- tracking time cut -->
	<timecut>
		<sec desc="simulation time cut" name="tcut" unit="s">10e-6</sec>
	</timecut>

	<!-- stop tracking on the backward side -->
	<bwdgeocut>
		<sec desc="tracking geometry cut on the bwd side" name="bwdTrkCutZ" unit="m">-1</sec>
	</bwdgeocut>

	<!-- beam -->
	<generator>
		<sec desc="particle generator: Beam or HepMC" name="genname">Beam</sec>
		<sec desc="particle" name="part">e-</sec>
		<sec desc="start position X in a global ref. system" name="posx1" unit="m">0</sec>
		<sec desc="start position Y in a global ref. system" name="posy1" unit="m">0</sec>
		<sec desc="start position Z in a global ref. system" name="posz1" unit="m">-1</sec>
		<sec desc="end position X in a global ref. system" name="posx2" unit="m">0</sec>
		<sec desc="end position Y in a global ref. system" name="posy2" unit="m">0</sec>
		<sec desc="end position Z in a global ref. system" name="posz2" unit="m">0</sec>
		<sec desc="gamma = E/mc^2" name="gamma" unit="">35225.121</sec>
		<sec desc="momentum spread" name="spread" unit="">0</sec>
		<sec desc="alpha X" name="alphax" unit="">0</sec>
		<sec desc="alpha Y" name="alphay" unit="">0</sec>
		<sec desc="beta X" name="betax" unit="m">0</sec>
		<sec desc="beta Y" name="betay" unit="m">0</sec>
		<sec desc="dispersion X" name="etax" unit="m">0</sec>
		<sec desc="dispersion Y" name="etay" unit="m">0</sec>
		<sec desc="dispersion PX" name="etapx" unit="">0</sec>
		<sec desc="dispersion PY" name="etapy" unit="">0</sec>
		<sec desc="emittance X" name="emitx" unit="nm">0</sec>
		<sec desc="emittance Y" name="emity" unit="nm">0</sec>
		<sec desc="type: core or tail" name="type">core</sec>
	</generator>

	<!-- gamma absorbers attached to the vacuum beam pipe ends -->
	<!-- the last absorber is built only if there is no far-bwd beam pipe -->

	<absorbers>
	</absorbers>

	<!-- magnet -->
	<magnets>
		<magnet>
		</magnet>
		<ip>
		</ip>
		<monitor>
			<sec desc="the name of the magnet in front of the beam monitor" name="magname">D1</sec>
		</monitor>
	</magnets>
</xml>
